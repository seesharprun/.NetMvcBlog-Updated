@model AuthorViewModel

@{
    ViewBag.Title = "Edit Author";
}

<h2 class="display-2 mb-5">Edit Author</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@*AuthorEditViewModel*@</legend>

        <div class="form-group">
            @Html.LabelFor(x => x.DisplayName)
            @Html.TextBoxFor(x => x.DisplayName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.FirstName)
            @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.LastName)
            @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Slug)
            @Html.TextBoxFor(x => x.Slug, new { @class = "form-control" })
        </div>
        @Html.HiddenFor(x => x.AuthorId)
        <div class="d-flex justify-content-between">
            <a href="@Url.Action("Index", "Author")" class="btn btn-outline-primary">
                <i class='fa fa-chevron-circle-left'></i> Back to List
            </a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </fieldset>
}
