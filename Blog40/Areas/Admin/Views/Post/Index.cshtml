@model PostListViewModel
@{
    ViewBag.Title = "Posts";
}

<h2 class="display-2 mb-5">All Posts</h2>

<table class="table table-striped table-hover">
    <thead class="thead-inverse">
        <tr>
            <th>Title</th>
            <th>Summary</th>
            <th>Category</th>
            <th>Author</th>
            <th>
                <div class="btn-group btn-group-sm" role="group">
                    @Html.ActionLink("Undelete All Posts", "UndeleteAll", "Post", new { }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("New Post", "New", "Post", new { }, new { @class="btn btn-success" })
                </div>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <th scope="row">@post.Title</th>
                <td>@post.Summary</td>
                <td>@post.Category.Name</td>
                <td>@post.Author.DisplayName</td>
                <td>
                    <div class="btn-group btn-group-sm" role="group">
                        @Html.ActionLink("Edit", "Edit", "Post", new { id = post.PostId }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", "Post", new { id = post.PostId }, new { @class = "btn btn-warning" })
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>